<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_5sdp">


    <LinearLayout
        android:id="@+id/llSelectstudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <prajna.app.utills.customFonts.Text_Medium
            android:id="@+id/tvStudName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:lines="1"
            android:text="Admission Date"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <prajna.app.utills.customFonts.Text_Normal
                android:id="@+id/tvStudDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:lines="1"
                android:text="Admission Date"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/radiobutton"
                android:layout_width="@dimen/_60sdp"
                android:layout_gravity="end"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/tap_here" />
        </LinearLayout>


        <prajna.app.utills.customFonts.Text_Normal
            android:id="@+id/tvStudGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:lines="1"
            android:text="Admission Date"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <prajna.app.utills.customFonts.Text_Normal
            android:id="@+id/tvStudAadhará¹£"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:lines="1"
            android:text="Admission Date"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>